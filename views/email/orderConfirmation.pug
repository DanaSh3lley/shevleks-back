//- orderConfirmation.pug
doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Order Confirmation
    body
        h1 Order Confirmation
        p Dear #{firstName},
        p Thank you for your order! Here are the details of your purchase:
        table
            thead
                tr
                    th Product
                    th Quantity
                    th Volume
                    th Price
            tbody
                each item in cart
                    tr
                        td= item.product.name
                        td= item.quantity
                        td= item.volume
                        td= `$${(item.product.price.find((p) => p.volume === item.volume).value * item.quantity).toFixed(2)}`
        p Shipping Address: #{shippingAddress}
        p Total Amount: $#{totalAmount}
        p If you have any questions regarding your order, please don't hesitate to contact us.
        p Sincerely,
        p The Natours Team
